<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="LetterOfCreditFundGroup" parent="LetterOfCreditFundGroup-parentBean" />

  <bean id="LetterOfCreditFundGroup-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.kra.award.cgb.LetterOfCreditFundGroup" />
		<property name="objectLabel" value="Letter Of Credit Fund" />    
    <property name="titleAttribute" value="code" />
    <property name="attributes" >
      <list>
        <ref bean="LetterOfCreditFundGroup-description" />
        <ref bean="LetterOfCreditFundGroup-active" />
      </list>
    </property>
  </bean>
    
    
    <bean id="LetterOfCreditFundGroup-description" parent="LetterOfCreditFundGroup-description-parentBean" />
    <bean id="LetterOfCreditFundGroup-description-parentBean" abstract="true" parent="AttributeDefinition">
      <property name="name" value="description" />
      <property name="label" value="Description" />
      <property name="shortLabel" value="Description" />
      <property name="maxLength" value="40" />
      <property name="required" value="false"/>
      <property name="control" >
        <bean parent="TextControlDefinition"
              p:size="40" />
      </property>      
    </bean>
    
    <bean id="LetterOfCreditFundGroup-active" parent="LetterOfCreditFundGroup-active-parentBean" />
    <bean id="LetterOfCreditFundGroup-active-parentBean" abstract="true" parent="AttributeReferenceDummy-genericBoolean">
      <property name="name" value="active"/>
	  <property name="label" value="Active" />
      <property name="shortLabel" value="Active" />
      <property name="required" value="false"/>
    </bean>       

</beans>

    