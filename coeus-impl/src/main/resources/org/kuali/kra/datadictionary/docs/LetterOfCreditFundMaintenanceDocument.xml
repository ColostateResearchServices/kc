<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p" xsi:schemaLocation="http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="LetterOfCreditFundMaintenanceDocument" parent="LetterOfCreditFundMaintenanceDocument-parentBean"/>
	<bean id="LetterOfCreditFundMaintenanceDocument-parentBean" abstract="true" parent="KcMaintenanceDocumentEntry">
		<property name="businessObjectClass" value="org.kuali.kra.award.cgb.LetterOfCreditFund"/>
		<property name="maintainableClass" value="org.kuali.kra.maintenance.KraMaintainableImpl"/>
		<property name="maintainableSections">
			<list>
				<ref bean="LetterOfCreditFundMaintenanceDocument-EditLetterOfCreditFund"/>
			</list>
		</property>
		<property name="lockingKeys">
			<list>
				<value>fundCode</value>
			</list>
		</property>
		<property name="allowsRecordDeletion" value="false" />		
		<property name="documentTypeName" value="LetterOfCreditFundMaintenanceDocument"/>
		<property name="documentAuthorizerClass" value="org.kuali.rice.kns.document.authorization.MaintenanceDocumentAuthorizerBase"/>
		
		
	</bean>

	<!-- Maintenance Section Definitions -->
	
	<bean id="LetterOfCreditFundMaintenanceDocument-EditLetterOfCreditFund" parent="LetterOfCreditFundMaintenanceDocument-EditLetterOfCreditFund-parentBean"/>
	<bean id="LetterOfCreditFundMaintenanceDocument-EditLetterOfCreditFund-parentBean" abstract="true" parent="MaintainableSectionDefinition">
		<property name="id" value="Edit LOC Fund Group"/>
		<property name="title" value="Edit LOC Fund Group"/>
		<property name="maintainableItems">
			<list>
				<bean parent="MaintainableFieldDefinition" p:name="fundCode" p:required="true"/>
				<bean parent="MaintainableFieldDefinition" p:name="groupCode" p:required="true"/>
				<bean parent="MaintainableFieldDefinition" p:name="description" p:required="true"/>
				<bean parent="MaintainableFieldDefinition" p:name="active" p:required="true"/>
				<bean parent="MaintainableFieldDefinition" p:name="startDate"/>
				<bean parent="MaintainableFieldDefinition" p:name="expirationDate"/>
				<bean parent="MaintainableFieldDefinition" p:name="amount"/>
			</list>
		</property>
	</bean>
</beans>