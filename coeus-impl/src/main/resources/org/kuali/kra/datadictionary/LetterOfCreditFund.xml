<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="LetterOfCreditFund" parent="LetterOfCreditFund-parentBean" />

  <bean id="LetterOfCreditFund-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.kra.award.cgb.LetterOfCreditFund" />
		<property name="objectLabel" value="Letter Of Credit Fund" />    
    <property name="titleAttribute" value="code" />
	<property name="lookupDefinition" >
		<ref bean="LetterOfCreditFund-lookupDefinition" />
	</property>
    <property name="attributes" >
      <list>
        <ref bean="LetterOfCreditFund-fundCode" />
        <ref bean="LetterOfCreditFund-description" />
        <ref bean="LetterOfCreditFund-startDate" />
        <ref bean="LetterOfCreditFund-expirationDate" />
        <ref bean="LetterOfCreditFund-active" />
        <ref bean="LetterOfCreditFund-amount" />
        <ref bean="LetterOfCreditFund-groupCode" />
      </list>
    </property>
  </bean>
    
    
    <bean id="LetterOfCreditFund-fundCode" parent="LetterOfCreditFund-fundCode-parentBean" />
    <bean id="LetterOfCreditFund-fundCode-parentBean" abstract="true" parent="AttributeDefinition">
      <property name="name" value="fundCode" />
      <property name="label" value="Fund Code" />
      <property name="shortLabel" value="Description" />
      <property name="maxLength" value="15" />
      <property name="required" value="false"/>
      <property name="control" >
        <bean parent="TextControlDefinition"
              p:size="15" />
      </property>      
    </bean>
    
    
    <bean id="LetterOfCreditFund-description" parent="LetterOfCreditFund-description-parentBean" />
    <bean id="LetterOfCreditFund-description-parentBean" abstract="true" parent="AttributeDefinition">
      <property name="name" value="description" />
      <property name="label" value="Description" />
      <property name="shortLabel" value="Description" />
      <property name="maxLength" value="60" />
      <property name="required" value="false"/>
      <property name="control" >
        <bean parent="TextControlDefinition"
              p:size="60" />
      </property>      
    </bean>
    
     <bean id="LetterOfCreditFund-startDate" parent="LetterOfCreditFund-startDate-parentBean" />
    <bean id="LetterOfCreditFund-startDate-parentBean" abstract="true" parent="AttributeReferenceDummy-genericDate">
      <property name="name" value="startDate"/>
	  <property name="label" value="Start Date" />
      <property name="shortLabel" value="Start Date" />
      <property name="required" value="false"/>
    </bean>

    <bean id="LetterOfCreditFund-expirationDate" parent="LetterOfCreditFund-expirationDate-parentBean" />
    <bean id="LetterOfCreditFund-expirationDate-parentBean" abstract="true" parent="AttributeReferenceDummy-genericDate">
      <property name="name" value="expirationDate"/>
	  <property name="label" value="Expiration Date" />
      <property name="shortLabel" value="Expiration Date" />
      <property name="required" value="false"/>
    </bean>

    
    <bean id="LetterOfCreditFund-amount" parent="LetterOfCreditFund-amount-parentBean" />
    <bean id="LetterOfCreditFund-amount-parentBean" abstract="true" parent="AttributeDefinition">
      <property name="name" value="amount"/>
      <property name="label" value="Amount" />
      <property name="shortLabel" value="Amount" />
      <property name="required" value="false"/>
      <property name="maxLength" value="22" />
      <property name="validationPattern" >
        <bean parent="FixedPointValidationPattern"
              p:precision="19"
              p:scale="2"
              p:allowNegative="true" />
      </property>
      <property name="control" >
        <bean parent="CurrencyControlDefinition"
              p:formattedMaxLength="22"
              p:size="16" />
      </property>
    </bean>       

    <bean id="LetterOfCreditFund-active" parent="LetterOfCreditFund-active-parentBean" />
    <bean id="LetterOfCreditFund-active-parentBean" abstract="true" parent="AttributeReferenceDummy-genericBoolean">
      <property name="name" value="active"/>
	  <property name="label" value="Active" />
      <property name="shortLabel" value="Active" />
      <property name="required" value="false"/>
    </bean>    
     

    <bean id="LetterOfCreditFund-groupCode" parent="LetterOfCreditFund-groupCode-parentBean" />
    <bean id="LetterOfCreditFund-groupCode-parentBean" abstract="true" parent="AttributeDefinition">
      <property name="name" value="groupCode" />
      <property name="label" value="Fund Group Code" />
      <property name="shortLabel" value="Fund Group Code" />
      <property name="maxLength" value="4" />
      <property name="required" value="false"/>
      <property name="control" >
        <bean parent="TextControlDefinition"
              p:size="4" />
      </property>      
    </bean>     

	<!-- Business Object Lookup Definition -->
	<bean id="LetterOfCreditFund-lookupDefinition" parent="LetterOfCreditFund-lookupDefinition-parentBean" />
    <bean id="LetterOfCreditFund-LookupView" parent="LetterOfCreditFund-LookupView-parentBean"/>
  
	<bean id="LetterOfCreditFund-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
		<property name="title" value="LOC Fund Lookup" />
		<property name="defaultSort" >
           <bean parent="SortDefinition"/>
		</property>
	    <property name="helpDefinition" >
          <bean parent="HelpDefinition" p:parameterNamespace="KC-M" p:parameterName="LetterOfCreditFundMaintenanceHelp" p:parameterDetailType="Document"/>
        </property>
		<property name="lookupFields" >
		<list>
          <bean parent="FieldDefinition" p:attributeName="fundCode" p:forceInquiry="true"/>
          <bean parent="FieldDefinition" p:attributeName="groupCode" />
          <bean parent="FieldDefinition" p:attributeName="description"/>
        </list>
        </property>
        
    <property name="resultFields">
      <list>
        <bean parent="FieldDefinition" p:attributeName="fundCode" p:forceInquiry="true"/>
        <bean parent="FieldDefinition" p:attributeName="groupCode" />
        <bean parent="FieldDefinition" p:attributeName="description"/>
        <bean parent="FieldDefinition" p:attributeName="active"/>
      </list>
    </property>
    
  </bean>

  <bean id="LetterOfCreditFund-LookupView-parentBean" abstract="true" parent="Uif-LookupView">
    <property name="dataObjectClassName" value="org.kuali.kra.award.cgb.LetterOfCreditFund"/>
    <property name="headerText" value="LOC Fund  Lookup"/>
    <property name="criteriaFields">
      <list>
        <bean p:propertyName="fundCode" parent="Uif-LookupCriteriaInputField"/>
        <bean p:propertyName="groupCode" parent="Uif-LookupCriteriaInputField"/>
        <bean p:propertyName="description" parent="Uif-LookupCriteriaInputField"/>
        <bean p:propertyName="active" parent="Uif-LookupCriteriaInputField"/>
			</list>
		</property>
		<property name="resultFields" >
			<list>
        <bean p:propertyName="fundCode" parent="Uif-DataField"/>
        <bean p:propertyName="groupCode" parent="Uif-DataField"/>
        <bean p:propertyName="description" parent="Uif-DataField"/>
        <bean p:propertyName="amount" parent="Uif-DataField"/>
        <bean p:propertyName="startDate" parent="Uif-DataField"/>
        <bean p:propertyName="expirationDate" parent="Uif-DataField"/>
        <bean p:propertyName="active" parent="Uif-DataField"/>
			</list>
		</property>
	</bean>     

</beans>